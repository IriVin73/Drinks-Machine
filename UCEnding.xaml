<UserControl x:Class="Drinks_Machine.UCEnding"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Drinks_Machine"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFC59B71"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                    CornerRadius="10"
                    Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="Wheat">

        <Label x:Name="lblEnjoy" 
               Content="Enjoy your lemon tea." 
               Margin="234,10,0,0" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Top" 
               FontFamily="Elephant" 
               FontSize="36" 
               Foreground="#FF6A563D" />

        <Label x:Name="lblIngredients" 
               Content="Ingredients" 
               Margin="10,20,0,0" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Top" 
               FontFamily="Elephant" 
               FontSize="24" 
               Foreground="#FF6A563D" />

        <Image x:Name="ImFinalDrink" 
               HorizontalAlignment="Left" 
               Height="247" 
               Margin="400,90,0,0" 
               VerticalAlignment="Top" 
               Width="247" 
               Source="/cocoa.png"/>

        <ListBox x:Name="LbIngredients" 
                 IsHitTestVisible="False"
                 ItemsSource="{Binding DrinkIngredients}" 
                 Margin="0,60,515,10" 
                 Background="{x:Null}" 
                 BorderBrush="{x:Null}" 
                 ScrollViewer.VerticalScrollBarVisibility="Disabled"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" 
                                Margin="5">
                        <Image Source="{Binding Image}" 
                               Width="70" 
                               Height="70" 
                               Margin="5"/>
                        <TextBlock Text="{Binding Name}" 
                                   FontSize="16" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button x:Name="BtnDone" 
            Style="{StaticResource RoundedButtonStyle}"
            Width="119" 
            Height="50" 
            Content="Done" 
            Margin="671,390,10,10" 
            Click="BtnDone_Click" 
            BorderBrush="{x:Null}"/>

        <Button x:Name="BtnAnother" 
            Style="{StaticResource RoundedButtonStyle}" 
            Height="50" 
            Content="Make another drink" 
            Margin="482,390,153,10" 
            Click="BtnAnother_Click" 
            BorderBrush="{x:Null}"/>

    </Grid>
</UserControl>
